<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup</title>
</head>
<body>
  <h1>Effettua la registrazione</h1>
  <form id="signupForm">
    <label for="username">Username:</label>
    <br></br>
    <input type="text" id="username" name="username" required style="width: 20%;">
    <br></br>
    <label for="password">Password:</label>
    <br></br>
    <input type="password" id="password" name="password" required style="width: 20%;">
    <br></br>
    <button type="submit" style="border-radius: 12px; background-color: aqua; padding: 10px 20px;">Registrati</button>
  </form>

  <script>
    document.getElementById('signupForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;

      const response = await fetch('/signup', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ username, password })
      });
    
      if (response.ok) {
        alert('Signup successful');
        window.location.href = '/login';
      } else {
        console.log(response);
        alert('Signup failed');
      }
    });
  </script>
</body>
</html>

